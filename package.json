{
  "name": "sinnerschrader-website",
  "description": "Source project for https://www.sinnerschrader.com",
  "version": "0.0.0",
  "repository": {
    "type": "git",
    "url": "sinnerschrader/sinnerschrader-website"
  },
  "author": "SinnerSchrader",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=6"
  },
  "scripts": {
    "auth": "bash ./scripts/auth.sh",
    "build:all": "npm run build:js && npm run build:css && npm run build:pages && npm run build:svg",
    "build:ci": "bash ./scripts/build-ci.sh",
    "build:css:app": "mkdirp docs/static/css && lessc --strict-math=on --clean-css='advanced' --autoprefix='last 2 versions, not ie < 11, last 2 ChromeAndroid versions, last 2 Android versions, last 1 ExplorerMobile versions' src/css/app.less > docs/static/css/app.css",
    "build:css": "npm run build:css:app",
    "build:js": "mkdirp docs/static/js && browserify src/js/index.js --outfile docs/static/js/app.js",
    "build:pages": "schlump --src-statics static --dest docs --dest-statics docs/static --var.host=https://sinnerschrader.com --redirect-map ./redirects.json --scoped-css=./docs/static/css/scoped.css --css-variables",
    "build:svg:opt": "rm -f docs/static/icons/*.svg && svgo --disable=removeUselessDefs -f src/icons -o docs/static/icons/src",
    "build:svg:sprite": "svg-sprite-generate -d docs/static/icons/src -o docs/static/icons/sprite.svg && rm -rf docs/static/icons/src",
    "build:svg": "npm run build:svg:opt && npm run build:svg:sprite",
    "build:watch:css": "chokidar \"src/**/*.less\" --initial --command \"npm run build:css\"",
    "build:watch:js": "chokidar \"src/js/**/*\" --initial --command \"npm run build:js\"",
    "build:watch:pages": "chokidar \"src/pages/**/*\" \"src/templates/**/*.html\" \"src/helpers/**/*\" \"static/**\" --initial --command \"npm run build:pages\"",
    "build": "npm run build:all && npm run minify",
    "deploy:staging": "bash ./scripts/deploy-staging.sh",
    "deploy": "bash ./scripts/deploy.sh",
    "minify": "imagemin static/images/* --out-dir=docs/static --plugin=jpegoptim --plugin=mozjpeg --plugin=jpegtran --plugin=pngout",
    "postbuild:pages": "postcss --use autoprefixer --autoprefixer.browsers 'last 2 versions, not ie < 11, last 2 ChromeAndroid versions, last 2 Android versions, last 1 ExplorerMobile versions' --use cssnano --local-plugins --replace ./docs/static/css/scoped.css",
    "prebuild": "mkdirp docs && ncp ./CNAME ./docs/CNAME",
    "serve": "browser-sync start --config bs-config.js --serveStatic docs --files docs",
    "start": "npm run serve",
    "watch": "npm run build:css && (npm run build:watch:js & npm run build:watch:css & npm run build:watch:pages)"
  },
  "devDependencies": {
    "autoprefixer": "^6.5.3",
    "babel-core": "^6.14.0",
    "babel-plugin-transform-react-jsx": "^6.8.0",
    "browser-sync": "^2.16.0",
    "browserify": "^14.0.0",
    "camelcase": "^4.0.0",
    "chokidar-cli": "^1.2.0",
    "classnames": "^2.2.5",
    "common-tags": "^1.3.1",
    "cssnano": "^3.8.1",
    "fontfaceobserver": "^2.0.5",
    "gh": "^1.12.8",
    "github-hotline": "^0.2.1",
    "github-remote-commit": "^1.0.1",
    "globby": "^6.0.0",
    "gray-matter": "^2.0.2",
    "imagemin-cli": "^3.0.0",
    "imagemin-jpegoptim": "^5.0.0",
    "imagemin-jpegtran": "^5.0.2",
    "imagemin-mozjpeg": "^6.0.0",
    "imagemin-pngout": "^2.0.0",
    "json": "^9.0.4",
    "less": "2.7.2",
    "less-plugin-autoprefix": "1.5.1",
    "less-plugin-clean-css": "1.5.1",
    "mkdirp": "^0.5.1",
    "ncp": "^2.0.0",
    "nodemon": "^1.9.1",
    "postcss-cli": "^3.0.0",
    "react": "^15.4.1",
    "react-dom": "^15.6.2",
    "sander": "^0.6.0",
    "schlump": "^0.17.0",
    "semver": "^5.3.0",
    "svg-sprite": "^1.3.6",
    "svg-sprite-generator": "0.0.7",
    "svgo": "^0.7.1",
    "upper-case-first": "^1.1.2",
    "watchify": "^3.7.0",
    "xo": "^0.18.0"
  },
  "dependencies": {
    "intersection-observer-polyfill": "^0.1.0",
    "lory.js": "^2.2.1"
  }
}
